#Panel

style "murrine-panel" = "murrine-default" {
    xthickness = 3
    ythickness = 3
  text[NORMAL] = @text_color
  bg[NORMAL] = @bg_color
  bg[PRELIGHT] = shade (1.02, @bg_color)
  bg[SELECTED] =  @selected_bg_color
  bg[ACTIVE] = shade (0.88, @bg_color)
  bg[INSENSITIVE] = @bg_color
  fg[NORMAL] = @fg_color
  fg[PRELIGHT] = @selected_fg_color
  fg[ACTIVE] = @selected_bg_color
  fg[INSENSITIVE] = shade (0.65, @bg_color)
  bg_pixmap[NORMAL]	= "images/panel-bg.png"


engine "murrine"
{
 textstyle=1
     border_shades = { 2.0, 1.6 } #to draw a gradient on the border.

     border_colors = { "#101010", "#333333" } #to set the colors used on the border of many widgets. border_colors = FALSE to disable.



     gradient_colors = { "#101010", "#1f1f1f", "#1f1f1f", "#151515" } #to set the colors used on the gradient of many widgets. gradient_colors = FALSE to disable.

     prelight_shade = 1.25 #to select the shade level used in the scrollbar's slider, GtkComboBox with comboboxstyle = 1 and in the prelight state with gradient_colors.

     shadow_shades = { 0.8, 2.2 } #to draw a gradient on the shadow of some widgets.

     #glazestyle          = 2
     # Data type: Enumeration; default = 0, Range 0-4
     #   0 = flat highlight, 1 = curved highlight, 2 = concave style, 3 = top curved highlight, 4 = beryl highlight

     glow_shade          = 1.2   # Enable and set the Glow Shade
     # Data type: Real; default = 1.0, Range 0-2, precision 0.1
 
     glowstyle           = 1     # How to apply glow shade
     # Data type: Enumeration; default = 0, Range 0-4
     # 0 = Top glow, 1 = Bottom glow, 2 = Top and Bottom glow, 3 = Horizontal glow, 4 = Centered glow
 
     gradient_shades     = {1.1,1.0,0.9,0.8} # Gradient stops
     # (4 stops) Data type: Real; Range 0-2, precision 0.2, default 1.0
     # <!> Uses the current bg[COLOR]
 
     #highlight_shade     = 1.4   # Prelight ratio (includes panels)
     # Data type: Real; default = 1.1, Range 0-2, precision 0.01
 
     lightborder_shade   = 1.6   # Prelight border ratio
     # Data type: Real; default = 1.1, Range 0-2, precision 0.01
 
     lightborderstyle    = 0     # Prelight border style
     # Data type: Enumeration; default = 0, Range 0-1
     # 0 = lightborder on top side, 1 = lightborder on all sides

reliefstyle         = 1     # Relief style of widget
     # Data type: Enumeration; default = 1, Range 0-2
     # 0 = flat, 1 = inset, 2 = shadow
 
     rgba                = FALSE # Enable/Disable RGBA support
     # Data type: Boolean; default = FALSE (disabled)
 
     roundness           = 6     # Roundness of widget (typically button)
     # Data type: Real; default = 1, Range 0-8
     # 0 = square, > 0 = round
 

}
}


