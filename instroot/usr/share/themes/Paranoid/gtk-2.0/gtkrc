            overlay_stretch             = TRUE
	    overlay_border={6,6,3,3}
	    stretch                     =TRUE
        }
        image
        {
            function			= BOX
            recolorable			= TRUE
            state			= NORMAL
            file			= "images/option-button.png"
            border			= { 10, 10, 2, 2}
            stretch			= TRUE
        }
        image
        {
            function			= BOX
            recolorable			= TRUE
            state			= ACTIVE
            file			= "images/option-button.png"
            border			= { 10, 10, 2, 2}
            stretch			= TRUE
        }
        image
        {
            function			= BOX
            state			= INSENSITIVE
            recolorable			= TRUE
            file			= "images/option-button-ins.png"
            border			= { 10, 10, 2, 2}
            stretch			= TRUE
        }
        image
        {
            function			= TAB
            state			= INSENSITIVE
            recolorable			= TRUE
            overlay_file		= "images/option-menu-ins.png"
            overlay_stretch		= FALSE
        }
        image
        {
            function			= TAB
            recolorable			= TRUE
            overlay_file		= "images/option-menu2.png"
            overlay_border		= { 0, 0, 0, 0 }
            overlay_stretch		= FALSE
        }
   }
}

