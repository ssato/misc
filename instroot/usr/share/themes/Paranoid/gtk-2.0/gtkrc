gtk-icon-sizes = "panel-menu=16,16:panel=22,22:gtk-dialog=48,48:gtk-small-toolbar=22,22:gtk-large-toolbar=22,22:gtk-menu=16,16:gtk-button=22,22"
													

gtk-toolbar-style	= 0
gtk-menu-images = 0
gtk-button-images = 0 #do i care?

gtk-auto-mnemonics = 1

