# Paranoid 
# Murrine - Equinox - Pixbuff engines required
# http://monkeymagico.deviantart.com

#Thanks to all the Theme Hackers, Gnome Desktop Project and the Ubuntu Art Team.

# Set GtkSettings color scheme property.
# This can be overriden (via an xsetting) with eg. the gnome-appearance-properties.

gtk_color_scheme = "bg_color:#151515\nselected_bg_color:#3D3D3D\nbase_color:#141414" # Background, base.
gtk_color_scheme = "fg_color:#C2C2C2\nselected_fg_color:#f2f2f2\ntext_color:#C2C2C2" # Foreground, text.
gtk_color_scheme = "tooltip_bg_color:#000000\ntooltip_fg_color:#C2C2C2" # Tooltips.
gtk_color_scheme = "link_color:#5E8EC2" # Hyperlinks
gtk_color_scheme = "toolbar_bg:#E1E1E1" # Toolbar bg color.
gtk_color_scheme = "fm_color:#151515" # Color used in Nautilus and Thunar.
gtk_color_scheme = "frame_color:#151515\ninactive_frame_color:#141414" # Fix for Chrome
gtk_color_scheme = "progress_color:#f2f2f2\nprogress_text_color:#101010"

