{
image
{
	function=BOX
	detail="menu"
	file="images/menu.png"
	border={2,2,2,2}
	stretch=TRUE
}
    image{
               function			= HLINE
               recolorable		= TRUE
               file			= "images/line-h.png"
               border			= { 1, 1, 1, 1 }
               stretch			= TRUE
          }

}
}

