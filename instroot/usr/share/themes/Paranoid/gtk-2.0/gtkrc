style "button" = "inset-text"
{

	bg[NORMAL]   = @bg_color
	bg[PRELIGHT] = shade (1.12, @bg_color)
	bg[ACTIVE]   = shade (0.9, @bg_color)
	bg[SELECTED] = @selected_bg_color # pre-selected buttons, keep same as focus colour
	xthickness = 2
	ythickness = 2

engine "pixmap"
{

	image
{
	function=BOX
	detail="buttondefault"
	file="images/button-default.png"
	border={6,6,3,3}
	stretch=TRUE
}
image
{
	function=BOX
	state=PRELIGHT
	file="images/button-prelight.png"
	border={6,6,3,3}
	stretch=TRUE
        overlay_file ="images/buttonfocus.png"
        overlay_stretch                 = TRUE
	overlay_border={6,6,3,3}
	stretch=TRUE
}
image
{
	function=BOX
	state=ACTIVE
	file="images/button-pressed.png"
	border={6,6,3,3}
	stretch=TRUE
}	
image
{
	function=BOX
	state=INSENSITIVE
	file="images/button-insensitive.png"
	border={6,6,3,3}
	stretch=TRUE
}
image
{
	function=BOX
	file="images/button-normal.png"		
	border={6,6,3,3}
	stretch=TRUE
}}

}

